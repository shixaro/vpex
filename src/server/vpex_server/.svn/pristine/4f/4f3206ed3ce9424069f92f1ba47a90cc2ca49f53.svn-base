/* Секция работающая только для мобильников */
@media only screen and (max-device-width: 480px) {
	.table>tbody>tr>td, .table>tbody>tr>th, .table>tfoot>tr>td, .table>tfoot>tr>th, .table>thead>tr>td, .table>thead>tr>th {
		padding: 2px;
	}
	.container, .container-fluid {
		padding-left: 6px;
		padding-right: 6px;
		min-width: 100%;
	}
	p {
		/* font-size: 1.1em; */
	}
	.row {
		margin-right: -10px;
	}
	.topic-name {
		font-size: 1.4em;
	}
	.desktop-only {
		display: none;
		visibility: hidden;
	}
	.desktop-only, .desktop-only-column {
		display: none;
		visibility: hidden;
	}
	.mobile-only , .mobile-only-column {
		display: block;
		visibility: visible;
	}
	/*.user-avatar {
		max-width: 50%;
		min-width: 50px;
		height: auto;
	}*/
	.postbody, .postauthor, .gensmall, .posttoolbar {
		font-size: 1.2em;
	}
	/*
	.postauthor {
		min-height: 50px;
	}*/
	blockquote {
		font-size: 1.0em;
		padding: 2px 5px;
		margin: 0 0 5px;
	}	
	.col-xs-3, .col-xs-9 {
		padding-right: 0px;
	}
	.postbody img {
		max-width: 100%;
		height: auto;
		display: block;
	}
	.postbody iframe {
		width: 100%;
		height: auto;
		min-height: 280px;
		display: block;
	}
	th {
		white-space: normal;
	}
}


.css-adaptive {
display: block;
max-width: 100%;
height: auto;
}


